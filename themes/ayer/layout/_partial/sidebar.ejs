<button class="navbar-toggle"></button>
<nav class="navbar">
  <% if (theme.logo){ %>
  <div class="logo" style="color: rgb(218, 183, 108);font-weight:300;font-family: 'Lora', 'Times New Roman', serif;">
    <a href="<%- url_for() %>"><img src="<%- theme.logo %>" alt="<%= config.title %>" ></a>
    Welcome to my blog
    <br>
  </div>
  <% } %>
  <ul class="nav nav-main">
    <% for (var i in theme.menu){ %>
    <li class="nav-item">
      <a class="nav-item-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
    </li>
    <% } %>
  </ul>
  <ul class="nav">
    <li class="nav-item">
      <% if (theme.search){ %>
      <a class="nav-item-link nav-item-search"  title="<%= __('search') %>">
        <i class="ri-search-line" style="color: rgb(255, 255, 255);"></i> 
      </a>
      <% } %>
      <% if (theme.rss){ %>
      <a class="nav-item-link" target="_blank" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>">
        <i class="ri-rss-line"></i>
      </a>
      <% } %>
    </li>
  </ul>
</nav>
